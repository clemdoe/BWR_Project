solvers
{
    p_rgh
    {
        solver          GAMG;
        smoother        DIC;
        tolerance       1e-8;
        relTol          0;
    }

    p_rghFinal
    {
        $p_rgh;
        relTol          0;
    }

    "e.*"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-8;
        relTol          0;
        minIter         0;
    }

    "h.*"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-8;
        relTol          0;
        minIter         0;
    }

    ".*"
    {
        solver          PBiCGStab;
        preconditioner  diagonal;
        tolerance       1e-06;
        relTol          0.001;
    }

    "alpha"
    {
        solver              implicitUpwind;
        solvePhase          vapour;
        //adjustSubCycles     true;
        //alphaMaxCo          0.25;   
    }

    "(k|epsilon|Theta).*"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-7;
        relTol          0;
        minIter         1;
    }
}

PIMPLE
{
    minNOuterCorrectors         3;
    nCorrectors                 12;
    correctUntilConvergence     true;
    nNonOrthogonalCorrectors    0;
    partialEliminationMode      implicit;
    momentumMode                faceCentered;
    oscillationLimiterFraction  0;
    massTransferSafetyFactor    0.40;
    enthalpyStabilizationMode   cutoff;

    residualControl
    {
        p_rgh
        {
            tolerance                           1e-05;
            relTol                              0;
            useFirstPISOInitialResidual         true;
        }
        h.liquid
        {
            tolerance       1e-06;
            relTol          0;
        }
    }
}

relaxationFactors
{
    equations
    {
        ".*"            1;
    }

    fields
    {
        "dmdt.*"            0.01;
        "T.interface"       0.25;
        "T.interfaceFinal"  0.25;
        "alpha.*"           0.5;
